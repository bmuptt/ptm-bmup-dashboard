FROM node:24.11.1-alpine AS builder

ARG VITE_APP_BACKEND_URL
ARG VITE_APP_BACKEND_URL_SETTING
ARG VITE_APP_BACKEND_URL_FINANCE
ARG VITE_APP_APM_SERVER_URL
ARG VITE_APP_NODE_ENV
ARG VITE_APP_APM_ACTIVE

ENV VITE_APP_BACKEND_URL=$VITE_APP_BACKEND_URL
ENV VITE_APP_BACKEND_URL_SETTING=$VITE_APP_BACKEND_URL_SETTING
ENV VITE_APP_BACKEND_URL_FINANCE=$VITE_APP_BACKEND_URL_FINANCE
ENV VITE_APP_APM_SERVER_URL=$VITE_APP_APM_SERVER_URL
ENV VITE_APP_NODE_ENV=$VITE_APP_NODE_ENV
ENV VITE_APP_APM_ACTIVE=$VITE_APP_APM_ACTIVE

WORKDIR /app
COPY . .

RUN npm install
RUN npm run build

CMD ["sleep", "infinity"]
